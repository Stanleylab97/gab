$(document).ready(function () {
$("#detailContrat").hide();
$("#detailAssureur").hide();
});

$('input:radio[name="typeAffaire"]').change(function () {
if ($(this).is(':checked') && $(this).val() == 'avenant') { // append goes here
$("#detailContrat").show("fast");
} else {
$("#detailContrat").hide();
}
});


$('input:radio[name="quizriskcouvert"]').change(function () {
if ($(this).is(':checked') && $(this).val() == '1') { // append goes here
$("#detailAssureur").show("fast");
} else {
$("#detailAssureur").hide();
}
});
$("#add-row").click(function () {
var ligne = "<tr><td><input type='checkbox' name='select'></td><td><input type='text'/></td><td><input type='text'/></td><td><input type='text'/></td><td><input type='text'/></td><td><input type='text'/></td> </tr>";
$("#vehicules tbody").append(ligne);

$("#delete-row").click(function () {

$("#vehicules tbody").find('input[name="select"]').each(function () {
if ($(this).is(":checked")) {
$(this).parents("tr").remove();
}

});
});
});</script>{% endblock %}
